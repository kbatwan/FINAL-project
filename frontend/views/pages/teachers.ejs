<head>
    <%- include('../partials/head'); %>
    <style>
        .parent-div {
            width: 100%;
            margin: 0 auto;
        }
        .child-div {
            width: 50%;
            margin: 0 auto;
            text-align: center;
        }
        table {
          /* border-collapse: collapse; */
          width: 100%;
        }
        
        td, th {
          border: 1px solid #393737;
          text-align: left;
          padding: 7px;
        }

        .center {
            left: 50%;
        }
        </style>
</head>
<body class="container" style="background-color:#f8f9fa">


<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron" style="background-color:powderblue;">
        <ul>
            <h1>TEACHERS</h1>
            <br>
                <% if (locals.teachers) { %>
                    <table>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Age
                            </th>
                            <th>
                                Room
                            </th>
                        </tr>
                    <% locals.teachers.forEach(function(car) { %>
                        <tr>
                            <td><strong><%= car.id %></strong> </td>
                            <td><strong><%= car.firstname %></strong> <strong><%= car.lastname %></strong></td>
                            <td><strong><%= car.age %></strong></td>
                            <td><strong><%= car.room %></strong></td>
                        </tr>
                    <% }); %>
                    </table>
                <% } %>
                
            </ul>
        </div>

<div class="parent-div">
    <div class="child-div">
    <form action="/process_form_delete_teacher" method="post" class="jumbotron" style="background-color:powderblue;height: 330px;">
        <h1 style="font-size:200%">DELETE TEACHER</h1>
        <br>
        <div style="text-align:left">
          <div class="control-group">
              <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                <label style="color:rgb(63, 93, 97);">ID To Delete</label>
                <input name="id" type="text" class="form-input to" placeholder="ID" id="id" required data-validation-required-message="Please enter your Username.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
              <input class ="btn-primary" type="submit">  
            </div>
        </form>
    </div>
</div>

<div class="parent-div">
    <div class="child-div">
            <form action="/process_form_update_teacher" method="post" class="jumbotron" style="background-color:powderblue;height: 480px;">
                <h1 style="font-size:200%">UPDATE TEACHER</h1>
                <br>
                <div style="text-align:left">
                  <div class="control-group">
                      <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                        <label style="color:rgb(63, 93, 97);">ID To Update</label>
                        <input name="id" type="text" class="form-input to" placeholder="ID" id="id" required data-validation-required-message="Please enter your Username.">
                        <p class="help-block text-danger"></p>
                      </div>
                      <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                        <label style="color:rgb(63, 93, 97);">First Name To Update</label>
                        <input name="firstname" type="text" class="form-input to" placeholder="FIRST NAME" id="firstname" required data-validation-required-message="Please enter your Username.">
                        <p class="help-block text-danger"></p>
                      </div>
                      <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                        <label style="color:rgb(63, 93, 97);">Last Name To Update</label>
                        <input name="lastname" type="text" class="form-input to" placeholder="LAST NAME" id="lastname" required data-validation-required-message="Please enter your Username.">
                        <p class="help-block text-danger"></p>
                      </div>
                      <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                        <label style="color:rgb(63, 93, 97);">Age To Update</label>
                        <input name="age" type="text" class="form-input to" placeholder="AGE" id="age" required data-validation-required-message="Please enter your Username.">
                        <p class="help-block text-danger"></p>
                      </div>
                      <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                        <label style="color:rgb(63, 93, 97);">Room To Update</label>
                        <input name="room" type="text" class="form-input to" placeholder="ROOM" id="room" required data-validation-required-message="Please enter your Username.">
                        <p class="help-block text-danger"></p>
                      </div>
                    </div>
                      <input class ="btn-primary" type="submit">  
                    </div>
                </form>
            </div>
        </div>
                
        <div class="parent-div">
            <div class="child-div">
                    <form action="/process_form_create_teacher" method="post" class="jumbotron" style="background-color:powderblue;height: 410px;">
                        <h1 style="font-size:200%">CREATE TEACHER</h1>
                        <br>
                        <div style="text-align:left">
                          <div class="control-group">
                              <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                                <label style="color:rgb(63, 93, 97);">First Name</label>
                                <input name="firstname" type="text" class="form-input to" placeholder="FIRST NAME" id="firstname" required data-validation-required-message="Please enter your Username.">
                                <p class="help-block text-danger"></p>
                              </div>
                              <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                                <label style="color:rgb(63, 93, 97);">Last Name</label>
                                <input name="lastname" type="text" class="form-input to" placeholder="LAST NAME" id="lastname" required data-validation-required-message="Please enter your Username.">
                                <p class="help-block text-danger"></p>
                              </div>
                              <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                                <label style="color:rgb(63, 93, 97);">Age</label>
                                <input name="age" type="text" class="form-input to" placeholder="AGE" id="age" required data-validation-required-message="Please enter your Username.">
                                <p class="help-block text-danger"></p>
                              </div>
                              <div class="form-group floating-label-form-group controls" style="background-color:powderblue;">
                                <label style="color:rgb(63, 93, 97);">Room</label>
                                <input name="room" type="text" class="form-input to" placeholder="ROOM" id="room" required data-validation-required-message="Please enter your Username.">
                                <p class="help-block text-danger"></p>
                              </div>
                            </div>
                              <input class ="btn-primary" type="submit">  
                            </div>
                        </form>
                    </div>
                </div>

</main>

</body>
</html>